<body>

<h2>Build Your Soap Bundle</h2>
<p class="subtitle">Choose any 3 soaps — mix & match your favorites</p>

<div class="bundle-box">

  <div class="soap-grid" id="soapGrid"></div>

  <div class="summary">
    <p><strong>Selected:</strong> <span id="totalCount">0</span> / 3 soaps</p>

    <p class="price-line old-price">
      Original Price: Rs. <span id="originalPrice"></span>
    </p>

    <p class="price-line">
      <strong>Bundle Price: Rs. <span id="bundlePrice"></span></strong>
    </p>

    <p class="price-line save">
      You Save Rs. <span id="savingAmount"></span> 
      (<span id="discountPercent"></span>% OFF)
    </p>

    <button class="add-bundle" id="addBundleBtn" disabled>
      Add Bundle to Cart
    </button>
  </div>

</div>

<script>
/* ---------- PRICING ---------- */
const SINGLE_PRICE = 750;
const BUNDLE_PRICE = 1800;
const ORIGINAL_TOTAL = SINGLE_PRICE * 3;
const SAVINGS = ORIGINAL_TOTAL - BUNDLE_PRICE;
const DISCOUNT_PERCENT = Math.round((SAVINGS / ORIGINAL_TOTAL) * 100);

/* ---------- SOAP LIST ---------- */
const soaps = [
  "Charcoal & Tea Tree Soap",
  "Lavender Soap",
  "Turmeric Soap",
  "Nila Soap",
  "Aker Fassi Soap",
  "Cucumber Soap",
  "Coffee Soap"
];

let selections = {};
soaps.forEach(s => selections[s] = 0);

/* ---------- UI ---------- */
function renderSoaps() {
  const grid = document.getElementById("soapGrid");
  grid.innerHTML = "";

  soaps.forEach(name => {
    const card = document.createElement("div");
    card.className = "soap-card";

    card.innerHTML = `
      <h4>${name}</h4>
      <div class="qty-controls">
        <button onclick="changeQty('${name}', -1)">−</button>
        <span class="qty">${selections[name]}</span>
        <button onclick="changeQty('${name}', 1)">+</button>
      </div>
    `;
    grid.appendChild(card);
  });

  updateSummary();
}

function changeQty(name, change) {
  const total = getTotalCount();
  if (change > 0 && total >= 3) return;
  if (selections[name] + change < 0) return;

  selections[name] += change;
  renderSoaps();
}

function getTotalCount() {
  return Object.values(selections).reduce((a, b) => a + b, 0);
}

function updateSummary() {
  const total = getTotalCount();
  document.getElementById("totalCount").innerText = total;
  document.getElementById("addBundleBtn").disabled = total !== 3;
}

/* ---------- ADD TO CART ---------- */
document.getElementById("addBundleBtn").onclick = function() {
  const chosen = [];
  for (let name in selections) {
    if (selections[name] > 0) {
      chosen.push(`${name} x${selections[name]}`);
    }
  }

  let cart = JSON.parse(localStorage.getItem("store_cart")) || [];
  cart.push({
    id: "bundle_soap_3",
    name: "Pick Any 3 Soaps Bundle",
    price: BUNDLE_PRICE,
    qty: 1,
    details: chosen.join(", ")
  });

  localStorage.setItem("store_cart", JSON.stringify(cart));
  window.location.href = "./";
};

/* ---------- INIT ---------- */
document.getElementById("originalPrice").innerText = ORIGINAL_TOTAL;
document.getElementById("bundlePrice").innerText = BUNDLE_PRICE;
document.getElementById("savingAmount").innerText = SAVINGS;
document.getElementById("discountPercent").innerText = DISCOUNT_PERCENT;

renderSoaps();
</script>

</body>
